<%= render "shared/navbar" %>
<div class="container-fluid mt-3" style="display: flex; justify-content:center; align-items: center;">
<div style="width: 50%;">
<h1 class="mb-3 mt-3">Edit Tool</h1>

<%= simple_form_for @tool do |f| %>
  <%= f.input :name, as: :text %>
  <%= f.input :tool_type, as: :text %>
  <%= f.input :price, as: :integer %>
  <%= f.input :description, as: :text %>
  <%= f.input :user_id %>
  <%= f.input :location, as: :text%>
  <%# t.index ["user_id"], name: "index_tools_on_user_id" %>
  <%= f.submit 'Submit', class: 'btn btn-secondary' %>
<% end %>

<%= link_to "Cancel", my_tools_path %>
</div>
</div>
