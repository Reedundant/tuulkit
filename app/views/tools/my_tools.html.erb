<h1>My tools for rent</h1>


  <%= link_to "List a new tool", new_tool_path  %>




  <% @my_tools.each do |t| %>
  <div class="d-flex flex-column m-3">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    </div>
    <div class="card-info">
      <ul>

          <li>
            <%=link_to t.name, tool_path(t) %>
          </li>
          <li>
           <%= link_to "Edit",  edit_tool_path(t), class:"btn btn-success"%>
          </li>
      </ul>

      <%= link_to "Delete a tool", tool_path(t),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tool?"},
      :style=>'font-size: 0.8rem; color: #d66767; text-decoration: none; padding-left: 0.5rem;'
    %>

    </div>
  </div>
  <% end %>
