<h1>🏷 Your requested tools to rent...</h1>

<ul class="list-unstyled">
  <% @bookings.each do |booking| %>
    <li>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path booking.tool.photo.key %>)">

    <div class="card-info">
    <%= link_to booking.tool.name, booking_path(booking) %> - pending...
     - <%= link_to "Cancel Booking",
      booking_path(booking),
      data: { turbo_method: :delete, turbo_confirm: "🛠 Are you sure you want to cancel this booking?"},
      :style=>'font-size: 0.8rem; color: #d66767; text-decoration: none; padding-left: 0.5rem;'
    %>
    </div>
    </div>
    </li>
  <% end %>
</ul>


<%= link_to "Back to tools", tools_path  %>
