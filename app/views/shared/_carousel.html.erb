


<div class="container card-holder">
  <% @tools.each do |t| %>
  <div class="d-flex flex-column">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    </div>
    <div class="card-info">
      <ul>
          <li>
            <%=link_to t.name, tool_path(t) %>
          </li>
          <li>
            <%= t.tool_type %>
          </li>
          <li>
            <%= t.price %>
          </li>
          <li>
           <%= link_to "Book this tool",  new_tool_booking_path(t), {:style=>'color: gray; padding-left: 1rem;'}%>
          </li>
      </ul>
    </div>
  </div>
  <% end %>
</div>
